@model Financeiro.Models.Pessoa

@{
    ViewData["Title"] = "Editar";
}

<div class="row">
    <div class="col-12">
        @if (Model.Id == 0)
        {
            <h1>Cadastar Pessoa</h1>
        }
        else
        {
            <h1>Editar Pessoa</h1>
        }
    </div>
    <div class="col-md-6">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label mb-1"></label>
                <input asp-for="Nome" class="form-control mb-3" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a class="btn btn-danger" asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
    <div class="col-6">
        <img src="~/images/editar.jpg" width="100%" class="img-fluid" alt="Moça cabelo cacheado">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
